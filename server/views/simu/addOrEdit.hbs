<h3>{{viewTitle}}</h3>

<form action="/simu" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{simu._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Name" value="{{simu.name}}">
        <div class="text-danger">
            {{simu.NameError}}
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/simu/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
